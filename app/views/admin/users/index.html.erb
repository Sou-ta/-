
<div class="container px-5 px-sm-0 ">
 <div class="row">
  <div class="px-4 mx-4 mt-2 ">
  <h3>社員一覧</h3>
  </div>
 </div>
 <div class="row">
  <div class="col-8 mx-auto mt-4">

    <table class="table table-border">
     <thead>
       <tr>
         <th class="table-active">社員ID</th>
         <th class="table-active">氏名</th>
         <th class="table-active">メールアドレス</th>
       </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
         <td><%= user.id %></td>

         <td><%= link_to user.name, admin_user_path(user), class: "text-dark" %></td>

         <td><%= user.email %></td>

       </tr>
      <% end %>
     </tbody>
    </table>

  </div>
 </div>
</div>