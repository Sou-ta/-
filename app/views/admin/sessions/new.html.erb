<div class="container">
    <div class="row">
      <div class="col-sm-10 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <p id="notice"></p>
        <h2>管理者ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
           <%= f.label :メールアドレス %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3 mx-5" %>
          </div>

          <div class="field">
           <%= f.label :パスワード %><br />
           <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3 mx-5" %>
          </div>

          <div class="actions text-center">
           <%= f.submit "ログイン", class: "btn btn-md btn-primary mt-3" %>
          </div>
        <% end %>

        </div>
    </div>
  </div>
