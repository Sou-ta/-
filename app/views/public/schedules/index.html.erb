<div class="container px-4 px-sm-0 ">
 <div class="row">
  <div class="col-3 mx-3 mt-3">
      <h2>Schedule</h2>
  </div>
 </div>
  <div class="row">
     <div class="col-10 mt-2 text-right">
     <%= link_to "有給申請", new_public_apply_paid_path, class: "btn shadow-sm btn-outline-secondary" %>
     </div>
  </div>
  <div class="row">
    <div class="col-10 mt-4">
    <%= month_calendar events: @schedules do |date, schedules| %>
    <div style="background-color: <%= schedules.first&.get_color %>">
            <%= date.day %>
            <ul>
            <% schedules.each do |schedule| %>
                    <%= link_to public_schedule_path(schedule), class:"text-dark" do %>
                        <li><%= schedule.event_name %></li>
                    <% end %>
            <% end %>
            </ul>
    </div>
    <% end %>
    </div>
 </div>
 <div class="row">
     <div class="col-10 mt-3 text-dark">
        <table hspace="1000" class="mx-3">
            <tr>
             <th bgcolor="#f0fff0" >出勤日（申請可）</th>
             <td></td>
             <th bgcolor="#ffff00">出勤日（申請困難）</th>
             <td></td>
             <th bgcolor="800000">出勤日（申請不可）</th>
             <td></td>
             <th bgcolor="#adff2">休日</th>
             <td></td>
             <th bgcolor="#00ffff">有給推奨日</th>
            </tr>
        </table>
     </div>
 </div>
</div>