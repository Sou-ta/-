

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <p id="notice"></p>
       <h2>ログイン</h2>
       <div class="field">
       <%= f.label :メールアドレス %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-3 mx-5" %>
       </div>

       <div class="field">
       <%= f.label :パスワード %><br />
       <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-3 mx-5" %>
       </div>

       <div class="actions text-center mt-3">
       <%= f.submit "ログイン", class: 'btn btn-md btn-primary' %><br>
       </div>

       <% end %>



       <%= render "public/shared/links" %>

      </div>
    </div>
  </div>