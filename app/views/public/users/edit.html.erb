<div class="container px-4 px-sm-0">
    <div class="row">
    <div class="col-3 mx-3 mt-3">
      <h2>登録情報編集</h2>
    </div>
    </div>
  <div class="row">
    <div class="col-10 text-center mt-4">
      <table class="table table-borderless">
       <%= form_with(model: [:public, @user], local: true) do |form| %>
       <tr>
       <th><%= form.label :"名前" %></th>
       <td><%= form.text_field :name %></td>
       </tr>
       <tr>
       <th><%= form.label :"メールアドレス" %></th>
       <td><%= form.email_field :email %></td>
       </tr>
       <tr>
         <th></th>
         <td>
         <%= form.submit "保存する", class:"btn btn-primary" %>
         </td>
       </tr>
       <% end %>
      </table>
    </div>
  </div>
</div>