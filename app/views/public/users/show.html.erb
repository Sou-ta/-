<div class="container px-5 px-sm-0 ">
 <div class="row">
   <div class="col-3 mx-3 mt-3">
    <h3>マイページ</h3>
   </div>
 </div>
<div class="row">
  <div class="col-9">
    <div class="font-weight-bold lead col-6 my-3">
    登録情報 <%= link_to "編集する", edit_public_user_path(current_user), class: "btn btn-success px-3 mx-4" %>
    </div>
    <table class="table table-bordered" >
        <tr>
          <th class="table-active border-dark col-4">氏名</th>
          <td class="border-dark"><%= current_user.name %></td>
        </tr>
        <tr>
          <th class="table-active border-dark">メールアドレス</th>
          <td class="border-dark"><%= current_user.email %></td>
        </tr>
    </table>
    <div class="font-weight-bold lead col-6 mt-4 mb-3">
      <table>
        <tr>
         <td>有給取得日数</td>
         <td></td>
         <td><%= current_user.apply_paids.permited.count %>日</td>
        </tr>
        <tr>
         <td>残り日数</td>
         <td></td>
         <td>
             <%= current_user.day-current_user.apply_paids.permited.count %>日

         </td>
        </tr>
      </table>
    </div>
    </div>
    </div>
    </div>